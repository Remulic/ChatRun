<view class="main"><view class="animate__animated animate__bounceInLeft card"><view class="list"><navigator url="{{'../userhome/userhome?id='+dynamic.userid}}"><image src="{{dynamic.imgurl}}" mode></image></navigator><view class="names"><view class="name"><view>{{''+dynamic.name+''}}</view><block wx:if="{{dynamic.userid==uid}}"><view data-event-opts="{{[['tap',[['deletedynamic',['$0','$1'],['dynamic.id','index']]]]]}}" class="nameright" bindtap="__e"><view class="iconfont icon-gengduo _i"></view></view></block></view><view class="time"><rich-text nodes="{{dynamic.time}}"></rich-text></view></view></view><view class="msg"><view class="message">{{''+dynamic.message+''}}</view><block wx:if="{{dynamic.picture}}"><view class="imgArea"><block wx:for="{{dynamic.picture}}" wx:for-item="pic" wx:for-index="indexs"><view data-event-opts="{{[['tap',[['previewImg',['$0'],[[['dynamic.picture','',indexs]]]]]]]}}" bindtap="__e"><image src="{{pic}}" mode></image></view></block></view></block></view><view class="talk"><view class="talk-left"><view class="iconfont icon-redu _i"></view>{{'热度'+dynamic.talker+''}}</view><view class="talk-right"><view data-event-opts="{{[['tap',[['e0',['$event']]]]]}}" class="iconfont icon-pinglun _i" bindtap="__e"></view></view></view><view hidden="{{!(isinput)}}" class="sendcomment"><input class="search" focus="true" placeholder="我也来句废话" placeholder-style="color: #aaa;" data-event-opts="{{[['input',[['__set_model',['','message','$event',[]]]]]]}}" value="{{message}}" bindinput="__e"/><view data-event-opts="{{[['tap',[['sendcomment',['$event']]]]]}}" class="top-bar-right " bindtap="__e">发送</view></view></view><block wx:for="{{commentArr}}" wx:for-item="item" wx:for-index="index"><view data-event-opts="{{[['longpress',[['deletediscuss',['$0',index],[[['commentArr','',index]]]]]]]}}" class="comment animate__animated animate__bounceInLeft" bindlongpress="__e"><view data-event-opts="{{[['tap',[['moveuser',['$0'],[[['commentArr','',index]]]]]]]}}" class="name" bindtap="__e">{{item.name+' :'}}</view><view class="message">{{''+item.message+''}}</view></view></block></view>