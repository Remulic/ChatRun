.contents {
  padding-top: 25px;
}
/* 顶部 */
.top-bar {
  z-index: 100;
  width: 92%;
  height: 88rpx;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(255, 255, 255, 0.96);
  border-bottom: 1rpx solid rgba(39, 20, 50, 0.1);
  padding-left: 32rpx;
  padding-right: 32rpx;
  padding-top: 25px;
  box-shadow: 1rpx 1rpx 20rpx 2rpx rgba(117, 112, 117, 0.2);
}
.top-bar .top-bar-left {
  float: left;
}
.top-bar .top-bar-left image {
  width: 68rpx;
  height: 68rpx;
  margin-top: 10rpx;
  border-radius: 16rpx;
}
.top-bar .top-bar-center {
  float: left;
}
.top-bar .top-bar-center .logo {
  display: inline-block;
  padding-top: 18rpx;
  font-size: 24rpx;
  color: #ffe431;
}
.top-bar .top-bar-center .title {
  line-height: 88rpx;
}
.top-bar .top-bar-right {
  float: right;
  box-shadow: 8rpx 10rpx 25rpx -5rpx rgba(117, 112, 117, 0.3);
  border-radius: 40rpx;
}
.top-bar .top-bar-right .search {
  display: inline-block;
  width: 70rpx;
  height: 78rpx;
  padding-left: 12rpx;
}
.top-bar .top-bar-right .add {
  width: 78rpx;
  height: 78rpx;
  display: inline-block;
}
.top-bar .top-bar-right ._i {
  width: 52rpx;
  height: 52rpx;
  display: inline-block;
  font-size: 19rpx;
  padding: 24rpx 5rpx 5rpx 15rpx;
}
/* 底部 */
.bottom {
  position: fixed;
  bottom: 20rpx;
  width: 100%;
  height: 104rpx;
  box-sizing: border-box;
  padding: 12rpx 32rpx;
  padding-bottom: env(safe-area-inset-bottom);
}
.bottom .bottom-btn {
  height: 80rpx;
  margin: 0 auto;
  background: #ffe431;
  border-radius: 20rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #272832;
}
.btn1 {
  height: 80rpx;
  border-radius: 20rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #272832;
}
.top-bar {
  background: #ffe431;
  /* 音符旋转动画 */
}
.top-bar .top-bar-right {
  margin-top: 4rpx;
  /* 音符 */
}
.top-bar .top-bar-right .music {
  font-size: 40rpx;
}
.top-bar .playing {
  -webkit-animation: rotate 2s linear infinite;
          animation: rotate 2s linear infinite;
}
@-webkit-keyframes rotate {
from {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
to {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
}
@keyframes rotate {
from {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
to {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
}
